<h2 class="text-center">Registration form</h2>

{{#layout/iron-row}}
  {{#ui/iron-form submit="authenticate"}}
    {{quick/form-control-field model=form valueKey="email" required=true}}
    {{quick/form-control-field model=form valueKey="password" required=true inputType="password"}}
    {{quick/form-control-field model=form valueKey="passwordRepeat" required=true inputType="password"}}
    {{quick/form-submit}}
  {{/ui/iron-form}}
{{/layout/iron-row}}

{{#layout/iron-row}}
  <div id="sign-link">
    {{link-to 'Go to login page' 'signin'}}
  </div>
{{/layout/iron-row}}