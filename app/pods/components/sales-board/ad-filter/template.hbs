{{#if filter.committed}}
  <li class="ads-filters-point">
    <a href="#" class="ad-filter-open-dialog" {{action "openFilterDialog"}}>
      {{shortDescription}}
    </a>
    <a href="#" class="ad-filter-close-dialog" {{action "removeFilter"}}>
      {{fa-icon "close"}}
    </a>
  </li>
{{/if}}

{{#if filter.opened}}
  {{#ui/iron-dialog close="closeFilterDialog" containerClass="ad-filter-dialog"}}
    {{#ui/iron-form}}
      {{#layout/iron-row}}
        <div class="col-md-4">
          {{quick/form-control-select model=filter.values valueKey="country" options=countries label="Country"}}
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
      {{/layout/iron-row}}

      {{#layout/iron-row}}
        {{ui/iron-button type="success" text="Save" click="commitFilter" disabled=isSaveDisabled}}
      {{/layout/iron-row}}
    {{/ui/iron-form}}
  {{/ui/iron-dialog}}
{{/if}}