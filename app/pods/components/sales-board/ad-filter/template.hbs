{{#if filter.committed}}
  <a href="#" class="ad-filter-new" style={{borderColor}} {{action "openFilterDialog"}}>
    {{shortDescription}}
    <a href="#" class="ad-filter-close-dialog" style={{closeButtonColor}} {{action "removeFilter"}}>
      {{fa-icon "close"}}
    </a>
  </a>
{{/if}}

{{#if filter.opened}}
  {{#ui/iron-dialog close="closeFilterDialog" containerClass="ad-filter-dialog"}}
    {{#ui/iron-form}}
      {{#layout/iron-row}}
        <div class="col-md-4">
          {{quick/form-control-select model=filter.values valueKey="countryId" options=countriesOptions}}
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
      {{/layout/iron-row}}

      {{#layout/iron-row}}
        {{ui/iron-button type="success" text="Save" click="commitFilter"}}
      {{/layout/iron-row}}
    {{/ui/iron-form}}
  {{/ui/iron-dialog}}
{{/if}}